<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="@drawable/fondof"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:text="PREGUNTADOS"
    android:textAlignment="center"
    android:layout_marginTop="40dp"
    android:textSize="40sp"
    android:textStyle="bold"
    android:background="@drawable/button_rounded_border"
    >

</TextView>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"


    >

    <EditText
        android:id="@+id/txtContra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnregistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRARSE"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:background="@drawable/button_rounded"

            ></Button>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESAR"
        android:textAlignment="center"
        android:background="@drawable/button_rounded"

        ></Button>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/jugadores"
        tools:layout_editor_absoluteY="-39dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="175dp"

        />


    <TextView
        android:id="@+id/lbljugador1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JUGADOR 1"
        android:textAlignment="center"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:id="@+id/lbljugador2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="JUGADOR 2"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        ></TextView>

    <Button
        android:id="@+id/btnJugarf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="JUGAR"
        android:textAlignment="center"
        android:background="@drawable/button_rounded"
        android:layout_marginTop="20dp"

        ></Button>




</androidx.appcompat.widget.LinearLayoutCompat>